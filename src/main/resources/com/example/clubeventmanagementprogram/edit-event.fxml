<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.clubeventmanagementprogram.controller.eventActions.AddEventController">
    <Label text="Event Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="eventNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Event Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="eventDescriptionField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <DatePicker fx:id="eventDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Start Time:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="startTimeField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="End Time:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="endTimeField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Button fx:id="saveButton" onAction="#handleSaveAction" text="Save" GridPane.rowIndex="5" />
    <Button fx:id="cancelButton" layoutX="20" layoutY="20" onAction="#loadEventScene" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="5" />

</GridPane>