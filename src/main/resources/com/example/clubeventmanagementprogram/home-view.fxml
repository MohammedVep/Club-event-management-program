<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.clubeventmanagementprogram.controller.HomeController">
    <top>
        <HBox alignment="CENTER" spacing="10">
            <Label fx:id="usernameLabel" />

            <Region HBox.hgrow="ALWAYS"/> <!-- This will push next elements to the right -->

            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="clubsButton" text="Clubs"/>
                <Button fx:id="eventsButton" text="Events"/>
                <Button fx:id="trackButton" text="Track"/>
                <Button fx:id="financialButton" text="Financial"/>
            </HBox>

            <Region HBox.hgrow="ALWAYS"/> <!-- This will push next elements to the right -->

            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="usersButton" text="Users"/>
                <Button fx:id="reportsButton" text="Reports"/>
                <Button fx:id="logoutButton" text="Logout"/>
            </HBox>
        </HBox>
    </top>

    <!-- Rest of your homepage content goes here -->
</BorderPane>